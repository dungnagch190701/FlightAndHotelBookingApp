<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:id="@+id/layoutHotel"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/room"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginStart="10dp"
                android:text="The Grace Hotel Dalat"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotel_name"
                android:layout_marginStart="10dp"
                android:background="@drawable/airport_code_bg"
                android:drawableStart="@drawable/ic_baseline_apartment_24"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="Hotel" />

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hotel_name"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/tag"
                android:isIndicator="true"
                android:numStars="5" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tag"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/ic_outline_location_on_24"
                android:text="Ward 1, Dalat" />
            <TextView
                android:layout_below="@id/address"
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quang Ninh, Vietnam"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/ic_baseline_reviews_24"
                android:text="8.8 (1234)"
                android:textColor="@color/primary" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/location"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/line_cut" />

            <TextView
                android:id="@+id/price_start_from_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price starts from"
                android:layout_below="@id/divider"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/price_start_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_start_from_txt"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="$ 299/room/night"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>






    </androidx.cardview.widget.CardView>

</RelativeLayout>