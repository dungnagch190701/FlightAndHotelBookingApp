<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:id="@+id/booking_layout_flight"
    android:clipToOutline="false">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun, 12 Apr 2023"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@id/date"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/airline_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_toEndOf="@id/date"
                android:text="Vietjet Air"
                android:textColor="@color/black"
                android:textSize="25dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/airline_name"
                android:layout_toEndOf="@id/date"
                android:text="Ha Noi - Tokyo" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/origin"
                android:layout_toEndOf="@id/date"
                android:text="10:50 - 12:00" />
            <TextView
                android:id="@id/passenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 passenger(s)"
                android:layout_below="@id/time"
                android:layout_toEndOf="@id/date"
                />

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/passenger"
                android:layout_toEndOf="@id/date"
                android:text="$500" />

            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/airport_code_bg"
                android:padding="5dp"
                android:text="Cash" />
        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>