<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/namePassenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_check_24"
        android:padding="10dp"
        android:text="Nguyen Anh Dung"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/namePassenger"
        android:background="@color/passenger"
        android:padding="10dp"
        android:text="Date of Birth" />
    <TextView
        android:id="@+id/dob_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19 May 2001"
        android:layout_alignEnd="@+id/dob"
        android:padding="10dp"
        android:layout_below="@id/namePassenger"
        />

    <TextView
        android:id="@+id/nation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob"
        android:background="@color/passenger"
        android:padding="10dp"
        android:text="Nationality" />

    <TextView
        android:id="@+id/nation_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob"
        android:layout_alignEnd="@+id/nation"
        android:padding="10dp"
        android:text="Vietnam" />



</RelativeLayout>